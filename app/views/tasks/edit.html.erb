<div class="container">
<h2>スケジュール編集</h2>

<% if flash.alert %>
  <p class="alert"><%= flash.alert %></p>
<% end %>
<%= render "shared/error", obj: @task %>

<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date ,"開始日" %></th>
            <td><%= f.date_field :start_date %></td>
        </tr>
        <tr>
            <th><%= f.label :finish_date ,"終了日" %></th>
            <td><%= f.date_field :finish_date %></td>
        </tr>
        <tr>
          <th><%= f.label :all_date ,"終日" %></th>
          <td><%= f.check_box :all_date %>終日の場合はチェックを入れます</td>
        </tr>
        <tr>
            <th><%= f.label :content ,"スケジュールメモ" %></th>
            <td><%= f.text_area :content %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュールの編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks, class:"link" %></li>
        </ul>
    </div>
<% end %>
</div>
<footer>
    <h1>現在の日時 :<%= Date.today.strftime('%Y年%m月%d日')%></h1>
</footer>
