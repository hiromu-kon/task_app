<div class="container">
<h2>スケジュール詳細</h2>

<table>
    <tr>
      <th>タイトル</th>
      <td><%= @task.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @task.start_date %></td>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @task.finish_date %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td>
        <% if @task.all_date == true %>
        <strong>○</strong>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @task.content %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :tasks, class:"link" %></li>
        <li><%= link_to "スケジュールを編集する", [:edit, @task], class:"link" %></li>
        <li><%= link_to "スケジュールを削除", @task, method: :delete, data: { confirm: "本当に削除しますか？" }, class:"link" %></li>
    </ul>
</div>
</div>
<footer>
    <h1>現在の日時 :<%= Date.today.strftime('%Y年%m月%d日')%></h1>
</footer>
